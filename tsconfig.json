{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": ".",
    "outDir": "./build",
    "strictNullChecks": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "lib": ["es2017", "dom"],
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "references": [
    {
      "path": "./api-tasks"
    },
    {
      "path": "./api"
    },
    {
      "path": "./data"
    },
    {
      "path": "./api-interfaces"
    },
    {
      "path": "./core-backend"
    },
  ],
  "include": [
    "./api-tasks/src/**/*.d.ts",
    "./api/src/**/*.d.ts",
    "./data/src/**/*.d.ts",
    "./core-backend/src/**/*.d.ts",
    "./mobile-app/src/**/*.d.ts",
    "./api-interfaces/src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "*/dist/*", "*/build/*"]
}
